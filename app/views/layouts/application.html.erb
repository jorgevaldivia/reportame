<!DOCTYPE html>
<html ng-app="Reportame">
<head>
  <title><%= t("app_name") %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <link href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0-rc1/css/bootstrap.min.css" rel="stylesheet">
  <link href="/assets/style.css" rel="stylesheet">
  <link href="/assets/font-awesome.min.css" rel="stylesheet"> 

  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  

  <!-- NAV-->
  <div id="topnav" class="navbar navbar-fixed-top">
    <div class="container">
      <!-- .navbar-toggle is used as the toggle for collapsed navbar content -->
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    
      <a class="navbar-brand" href="<%= root_path %>"><i class="icon-eye-open icon-1x"></i>&nbsp;<%= t("app_name") %> <small  class="beta">beta</small></a>
       
      <!-- Place everything within .navbar-collapse to hide it until above 768px -->
      <div class="nav-collapse collapse navbar-responsive-collapse top-spy">
        <ul  class="nav navbar-nav pull-right ">
          <li <%= "class=active" if controller.class == HomeController %>><a href="<%= root_path %>"><%= t("menu.home") %></a></li>
          <li <%= 'class=active' if controller.class == IncidentsController %>>
            <a href="<%= new_incident_path %>"><i class="icon-plus-sign icon-1x"></i> <%= t("menu.report_incident") %></a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <!-- /NAV -->

  <!-- <div class="container" style="margin-top:48px;"> -->
	<%= yield %>
  <!-- </div> --> <!-- /container -->

  <!-- FOOTER -->
  <footer id="foot-sec">
    <div class="container">
      <div class="row">
        <div class="page-header text-center col-sm-12 col-lg-12">
          <h3 class="">Stay in touch with us</h3>
          
        </div>
        <hr>
      </div>
      <div class="row">
        <div class="col-12 col-lg-12 text-center">
          <div style="display:inline-block">
            <div class="circ-wrap circ-2x">
              <a href="#"><i class="icon-facebook icon-2x"></i></a>
            </div>
            <div class="circ-wrap circ-2x">
              <a href="#"><i class="icon-twitter icon-2x"></i></a>
            </div>          
            <div class="circ-wrap circ-2x">
              <a href="#"><i class="icon-linkedin icon-2x"></i></a>
            </div>          
            
            <div class="circ-wrap circ-2x">
              <a href="#"><i class="icon-google-plus icon-2x"></i></a>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row">
      <hr>
        <div class="text-center col-sm-12 col-lg-12">
            <p>Â© 2013 Reportame</p>
        </div>
      </div>
    </div>
  </footer>
  <!-- / FOOTER -->

</body>
</html>
