        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    
      <a class="navbar-brand" href="<%= root_path %>"><%= t("app_name") %></a>
       
      <!-- Place everything within .navbar-collapse to hide it until above 768px -->
      <div class="nav-collapse collapse navbar-responsive-collapse top-spy">
        <ul  class="nav navbar-nav pull-right ">
          <li class="active"><a href="<%= root_path %>"><%= t("menu.home") %></a></li>
          <li><a href="<%= new_incident_path %>"><span class="glyphicon glyphicon-plus-sign"></span> <%= t("menu.report_incident") %></a></li>
        </ul>
      </div>
    </div>
