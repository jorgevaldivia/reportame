<h1>Listing incidents</h1>

<table>
  <thead>
    <tr>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Country</th>
      <th>Description</th>
      <th>Incident type</th>
      <th>Occured at</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @incidents.each do |incident| %>
      <tr>
        <td><%= incident.address_1 %></td>
        <td><%= incident.address_2 %></td>
        <td><%= incident.city %></td>
        <td><%= incident.state %></td>
        <td><%= incident.zip %></td>
        <td><%= incident.country %></td>
        <td><%= incident.description %></td>
        <td><%= incident.incident_type %></td>
        <td><%= incident.occured_at %></td>
        <td><%= link_to 'Show', incident %></td>
        <td><%= link_to 'Edit', edit_incident_path(incident) %></td>
        <td><%= link_to 'Destroy', incident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

