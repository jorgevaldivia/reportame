<%= google_maps_include            %>
<%= stylesheet_link_tag     "maps" %>

<div>
  <!-- upper main stats -->
  <div id="main-stats" ng-controller="IncidentTypeCtrl">
    <div class="row stats-row">

    
      <div ng-repeat="incident_type in incident_types | orderBy:'total':true | limitTo:4">

        <div class="col-md-3 col-sm-3 stat">
          <div class="data">
            <span class="number">{{incident_type.total}}</span>
            {{incident_type.name}}
          </div>
          <!-- <span class="date">Today</span> -->
        </div>

      </div>

    </div>
  </div>
  <!-- end upper main stats -->

  <div id="pad-wrapper" class="full" ng-controller="IncidentCtrl">

    <div id="main-map-canvas" class=""></div>

    <!-- table sample -->
    <!-- the script for the toggle all checkboxes from header is located in js/theme.js -->
    <div class="table-products section" style="margin-top:0px; border-top:0px;">
      <div class="row head">
        <div class="col-md-12">
          <h4><%= t :recent_incidents %></h4>
        </div>
      </div>

      <div class="row">
        <table class="table table-hover">
          <thead>
            <tr>
              <th class="col-md-1"><%= Incident.human_attribute_name(:incident_type) %></th>
              <th class="col-md-3"><span class="line"></span><%= Incident.human_attribute_name(:full_address) %></th>
              <th class="col-md-3"><span class="line"></span><%= Incident.human_attribute_name(:description) %></th>
            </tr>
          </thead>
          <tbody>
            <tr class="firstxx" ng-repeat="incident in incidents | limitTo:5">
              <td>
                <span class="label label-danger">{{incident.translated_type}}</span>
              </td>
              <td>{{incident.full_address}}</td>
              <td class="description">{{incident.description}}</td>
            </tr>
          </tbody>
        </table>
      </div>
     
    </div>
    <!-- end table sample -->

    <div>
    </div>
  </div>
</div>
